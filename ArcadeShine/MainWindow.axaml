<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:lang="clr-namespace:ArcadeShine.Lang"
        xmlns:avalonia="clr-namespace:LibVLCSharp.Avalonia;assembly=LibVLCSharp.Avalonia"
        mc:Ignorable="d" d:DesignWidth="1920" d:DesignHeight="1080"
        x:Class="ArcadeShine.MainWindow"
        Title="Arcade Shine" WindowState="FullScreen">
    <Panel x:Name="RootPanel">
        <Image x:Name="GameBackground">
            <Image.Effect>
                <BlurEffect Radius="48"/>
            </Image.Effect>
        </Image>
        <Grid Background="#55555555">
            <Grid.RowDefinitions>
                <RowDefinition Height="6*"></RowDefinition>
                <RowDefinition Height="20*"></RowDefinition>
                <RowDefinition Height="3*"></RowDefinition>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="31*"></ColumnDefinition>
                <ColumnDefinition Width="20*"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <StackPanel Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="2" Background="Transparent" 
                        Orientation="Horizontal"
                        HorizontalAlignment="Center">
                <Image Height="192" Width="480" MaxWidth="480"
                       x:Name="PreviousGameSystemLogoImage" Opacity="0">
                    <Image.Effect>
                        <DropShadowEffect OffsetX="0"
                                          OffsetY="0"
                                          BlurRadius="35"
                                          Opacity="0.5"/>
                    </Image.Effect>
                </Image>
                <Image Height="192" Width="480" MaxWidth="480" 
                       x:Name="CurrentGameSystemLogoImage">
                    <Image.Effect>
                        <DropShadowEffect OffsetX="0"
                                          OffsetY="0"
                                          BlurRadius="35"
                                          Opacity="0.5"/>
                    </Image.Effect>
                </Image>
                <Image Height="192" Width="480" MaxWidth="480"
                       x:Name="NextGameSystemLogoImage" Opacity="0">
                    <Image.Effect>
                        <DropShadowEffect OffsetX="0"
                                          OffsetY="0"
                                          BlurRadius="35"
                                          Opacity="0.5"/>
                    </Image.Effect>
                </Image>
            </StackPanel>
            <Grid Grid.Column="0" Grid.Row="2" Grid.ColumnSpan="2" 
                  Background="Transparent" 
                  HorizontalAlignment="Stretch">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <StackPanel Grid.Column="0" Orientation="Horizontal" HorizontalAlignment="Center"> 
                    <Image Source="Assets/LeftRightStickIcon.png" >
                        <Image.Effect>
                            <DropShadowEffect OffsetX="0"
                                              OffsetY="0"
                                              BlurRadius="35"
                                              Opacity="0.5"/>
                        </Image.Effect>
                    </Image>
                    <TextBlock Text="{x:Static lang:Resources.SelectCategoryText}" 
                               Margin="50 0 0 0"
                               FontFamily="{StaticResource PoetsenOneFont}" 
                               FontSize="28"
                               Foreground="#EE7"
                               HorizontalAlignment="Center" 
                               VerticalAlignment="Center">
                        <TextBlock.Effect>
                            <DropShadowEffect Color="Black"
                                              Opacity="1"
                                              BlurRadius="10"
                                              OffsetX="0"
                                              OffsetY="0" />
                        </TextBlock.Effect>
                    </TextBlock>
                </StackPanel>
                <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Center">
                    <Image Source="Assets/UpDownStickIcon.png">
                        <Image.Effect>
                            <DropShadowEffect OffsetX="0"
                                              OffsetY="0"
                                              BlurRadius="35"
                                              Opacity="0.5"/>
                        </Image.Effect>
                    </Image>
                    <TextBlock Text="{x:Static lang:Resources.SelectGameText}" 
                               Margin="50 0 0 0"
                               FontFamily="{StaticResource PoetsenOneFont}" 
                               FontSize="28"
                               Foreground="#EE7"
                               HorizontalAlignment="Center" 
                               VerticalAlignment="Center">
                        <TextBlock.Effect>
                            <DropShadowEffect Color="Black"
                                              Opacity="1"
                                              BlurRadius="10"
                                              OffsetX="0"
                                              OffsetY="0" />
                        </TextBlock.Effect>
                    </TextBlock>
                </StackPanel>
            </Grid>
            <Grid Grid.Column="1" Grid.Row="1" VerticalAlignment="Stretch" Background="Transparent">
                <StackPanel Background="Transparent" Orientation="Vertical"
                            VerticalAlignment="Top">
                    <Image Height="192" x:Name="PreviousGameLogoImage"
                           Opacity="0.0">
                        <Image.Effect>
                            <DropShadowEffect OffsetX="0"
                                              OffsetY="0"
                                              BlurRadius="35"
                                              Opacity="0.5"/>
                        </Image.Effect>
                    </Image>
                    <Image Height="192" x:Name="CurrentGameLogoImage">
                        <Image.Effect>
                            <DropShadowEffect OffsetX="0"
                                              OffsetY="0"
                                              BlurRadius="35"
                                              Opacity="0.5"/>
                        </Image.Effect>
                    </Image>
                    <Image Height="192" x:Name="NextGameLogoImage"
                           Opacity="0.0">
                        <Image.Effect>
                            <DropShadowEffect OffsetX="0"
                                              OffsetY="0"
                                              BlurRadius="35"
                                              Opacity="0.5"/>
                        </Image.Effect>
                    </Image>
                </StackPanel>
                <TextBlock VerticalAlignment="Bottom" x:Name="GameDescriptionTextBlock"
                           Height="340"
                           Margin="55 770 55 25"
                           TextWrapping="Wrap"
                           TextAlignment="Left"
                           FontSize="28">
                    <TextBlock.Effect>
                        <DropShadowEffect Color="Black"
                                          Opacity="1"
                                          BlurRadius="10"
                                          OffsetX="0"
                                          OffsetY="0" />
                    </TextBlock.Effect>
                </TextBlock>
            </Grid>
            <DockPanel Grid.Column="0" Grid.Row="1" VerticalAlignment="Stretch">
                <StackPanel DockPanel.Dock="Bottom" Orientation="Vertical" HorizontalAlignment="Left" Margin="60 15 0 0">
                    <TextBlock x:Name="GameNameTextBlock" FontSize="28">
                        <TextBlock.Effect>
                            <DropShadowEffect Color="Black"
                                              Opacity="1"
                                              BlurRadius="10"
                                              OffsetX="0"
                                              OffsetY="0" />
                        </TextBlock.Effect>
                    </TextBlock>
                    <TextBlock x:Name="GameGenresTextBlock" FontSize="22">
                        <TextBlock.Effect>
                            <DropShadowEffect Color="Black"
                                              Opacity="1"
                                              BlurRadius="10"
                                              OffsetX="0"
                                              OffsetY="0" />
                        </TextBlock.Effect>
                    </TextBlock>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock x:Name="GameDeveloperTextBlock" FontSize="22">
                            <TextBlock.Effect>
                                <DropShadowEffect Color="Black"
                                                  Opacity="1"
                                                  BlurRadius="10"
                                                  OffsetX="0"
                                                  OffsetY="0" />
                            </TextBlock.Effect>
                        </TextBlock>
                        <TextBlock Text=" - " FontSize="22">
                            <TextBlock.Effect>
                                <DropShadowEffect Color="Black"
                                                  Opacity="1"
                                                  BlurRadius="10"
                                                  OffsetX="0"
                                                  OffsetY="0" />
                            </TextBlock.Effect>
                        </TextBlock>
                        <TextBlock x:Name="GameYearTextBlock" FontSize="22">
                            <TextBlock.Effect>
                                <DropShadowEffect Color="Black"
                                                  Opacity="1"
                                                  BlurRadius="10"
                                                  OffsetX="0"
                                                  OffsetY="0" />
                            </TextBlock.Effect>
                        </TextBlock>
                    </StackPanel>
                </StackPanel>
                <Border DockPanel.Dock="Top" CornerRadius="15" Background="Black"
                        BorderThickness="2" BorderBrush="Black" Margin="50 0 0 0"
                        VerticalAlignment="Stretch">
                    <avalonia:VideoView x:Name="VideoView" Margin="25" VerticalAlignment="Stretch"/>
                </Border>
            </DockPanel>
        </Grid>
        <Panel x:Name="FadePanel" Background="Black" Opacity="0"/>
    </Panel>
</Window>
